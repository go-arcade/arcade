{
  "name": "stdout",
  "version": "1.0.0",
  "description": "标准输出插件，将消息打印到标准输出，适用于调试和日志记录",
  "author": "Arcade Team <support@go-arcade.io>",
  "homepage": "https://github.com/go-arcade/arcade",
  "repository": "https://github.com/go-arcade/arcade",
  "pluginType": "custom",
  "entryPoint": "stdout",
  "dependencies": [],
  "configSchema": {
    "type": "object",
    "properties": {
      "prefix": {
        "type": "string",
        "description": "消息前缀，用于区分不同来源的日志",
        "default": ""
      },
      "json": {
        "type": "boolean",
        "description": "是否以 JSON 格式输出消息",
        "default": false
      }
    },
    "required": []
  },
  "actionsSchema": {
    "send": {
      "description": "发送消息到标准输出",
      "params": {
        "type": "object",
        "properties": {
          "message": {
            "type": ["string", "object"],
            "description": "要发送的消息内容，可以是字符串或对象",
            "examples": [
              "Hello, World!",
              "{\"level\": \"info\", \"msg\": \"Build completed\"}"
            ]
          }
        },
        "required": ["message"]
      },
      "returns": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "description": "执行状态"
          }
        }
      }
    },
    "template": {
      "description": "使用模板发送消息到标准输出",
      "params": {
        "type": "object",
        "properties": {
          "template": {
            "type": "string",
            "description": "消息模板（使用 Go text/template 语法）",
            "examples": [
              "Build {{.ProjectName}} completed in {{.Duration}}",
              "Deploy to {{.Environment}} by {{.User}}"
            ]
          },
          "data": {
            "type": "object",
            "description": "模板渲染所需的数据",
            "examples": [
              "{\"ProjectName\": \"myapp\", \"Duration\": \"5m30s\"}",
              "{\"Environment\": \"production\", \"User\": \"admin\"}"
            ]
          }
        },
        "required": ["template", "data"]
      },
      "returns": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "description": "执行状态"
          }
        }
      }
    }
  },
  "icon": "https://cdn.example.com/icons/stdout.png",
  "tags": ["custom", "stdout", "logging", "debug", "console", "output"],
  "minVersion": "1.0.0",
  "resources": {
    "cpu": "10m",
    "memory": "32Mi",
    "disk": "5Mi"
  },
  "examples": [
    {
      "name": "发送简单消息",
      "description": "发送一条简单的文本消息",
      "config": {
        "prefix": "INFO"
      },
      "action": "send",
      "params": {
        "message": "Hello, World!"
      }
    },
    {
      "name": "发送JSON消息",
      "description": "发送JSON格式的结构化消息",
      "config": {
        "prefix": "BUILD",
        "json": true
      },
      "action": "send",
      "params": {
        "message": {
          "level": "info",
          "project": "myapp",
          "status": "success",
          "duration": "5m30s"
        }
      }
    },
    {
      "name": "使用模板发送消息",
      "description": "使用模板渲染并发送消息",
      "config": {
        "prefix": "DEPLOY"
      },
      "action": "template",
      "params": {
        "template": "Deploy {{.ProjectName}} to {{.Environment}} completed in {{.Duration}}",
        "data": {
          "ProjectName": "myapp",
          "Environment": "production",
          "Duration": "2m15s"
        }
      }
    }
  ]
}

