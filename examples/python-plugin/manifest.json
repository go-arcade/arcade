{
  "name": "python-notify",
  "version": "1.0.0",
  "description": "使用 Python 开发的通知插件示例",
  "author": "Arcade Team",
  "pluginType": "notify",
  "entryPoint": "plugin.py",
  "runtime": {
    "type": "python",
    "version": "3.7+",
    "command": ["python3", "plugin.py"]
  },
  "configSchema": {
    "type": "object",
    "properties": {
      "webhook_url": {
        "type": "string",
        "description": "Webhook URL for sending notifications"
      },
      "timeout": {
        "type": "integer",
        "description": "Request timeout in seconds",
        "default": 30,
        "minimum": 1,
        "maximum": 300
      },
      "retry_count": {
        "type": "integer",
        "description": "Number of retries on failure",
        "default": 3,
        "minimum": 0,
        "maximum": 10
      }
    },
    "required": ["webhook_url"]
  },
  "defaultConfig": {
    "timeout": 30,
    "retry_count": 3
  },
  "tags": ["notify", "webhook", "python"],
  "resources": {
    "cpu": "100m",
    "memory": "128Mi",
    "disk": "10Mi"
  },
  "dependencies": {
    "python": {
      "requests": ">=2.25.0"
    }
  }
}

